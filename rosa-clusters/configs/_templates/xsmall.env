#------------------------------------------------------------------------------
# ROSA HCP Cluster Template: X-Small (Cost Optimized)
# Use Case: Development, Testing, Labs
# Estimated Cost: ~$433/month
#------------------------------------------------------------------------------

# Cluster identification - CHANGE THESE
CLUSTER_NAME="my-cluster"
ENVIRONMENT="dev"

# AWS Configuration
AWS_REGION="us-east-1"

# X-Small sizing
REPLICAS=2
INSTANCE_TYPE="m5.xlarge"
MULTI_AZ="false"

# Autoscaling
ENABLE_AUTOSCALING="true"
MIN_REPLICAS=2
MAX_REPLICAS=4

# Networking
MACHINE_CIDR="10.0.0.0/16"
SERVICE_CIDR="172.30.0.0/16"
POD_CIDR="10.128.0.0/14"
HOST_PREFIX=23

# Access
PRIVATE_CLUSTER="false"

# Tags
TAGS="environment=${ENVIRONMENT},cost-center=platform-engineering,owner=platform-team"

# Account settings
ACCOUNT_ROLE_PREFIX="ManagedOpenShift"
FIPS="false"
DISABLE_WORKLOAD_MONITORING="false"
