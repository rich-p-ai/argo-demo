#------------------------------------------------------------------------------
# ROSA HCP Cluster Template: Medium (Production)
# Use Case: Standard production workloads
# Estimated Cost: ~$1,800/month
#------------------------------------------------------------------------------

# Cluster identification - CHANGE THESE
CLUSTER_NAME="my-cluster"
ENVIRONMENT="prod"

# AWS Configuration
AWS_REGION="us-east-1"

# Medium sizing
REPLICAS=6
INSTANCE_TYPE="m5.2xlarge"
MULTI_AZ="true"

# Autoscaling
ENABLE_AUTOSCALING="true"
MIN_REPLICAS=6
MAX_REPLICAS=12

# Networking
MACHINE_CIDR="10.0.0.0/16"
SERVICE_CIDR="172.30.0.0/16"
POD_CIDR="10.128.0.0/14"
HOST_PREFIX=23

# Access - Private recommended for production
PRIVATE_CLUSTER="true"

# Tags
TAGS="environment=${ENVIRONMENT},cost-center=platform-engineering,owner=platform-team"

# Account settings
ACCOUNT_ROLE_PREFIX="ManagedOpenShift"
FIPS="false"
DISABLE_WORKLOAD_MONITORING="false"
