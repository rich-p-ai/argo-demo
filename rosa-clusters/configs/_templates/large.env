#------------------------------------------------------------------------------
# ROSA HCP Cluster Template: Large (Enterprise Production)
# Use Case: Large enterprise workloads, platform services
# Estimated Cost: ~$4,500/month
#------------------------------------------------------------------------------

# Cluster identification - CHANGE THESE
CLUSTER_NAME="my-cluster"
ENVIRONMENT="prod"

# AWS Configuration
AWS_REGION="us-east-1"

# Large sizing
REPLICAS=9
INSTANCE_TYPE="m5.4xlarge"
MULTI_AZ="true"

# Autoscaling
ENABLE_AUTOSCALING="true"
MIN_REPLICAS=9
MAX_REPLICAS=18

# Networking
MACHINE_CIDR="10.0.0.0/16"
SERVICE_CIDR="172.30.0.0/16"
POD_CIDR="10.128.0.0/14"
HOST_PREFIX=23

# Access - Private for production
PRIVATE_CLUSTER="true"

# Tags
TAGS="environment=${ENVIRONMENT},cost-center=platform-engineering,owner=platform-team"

# Account settings
ACCOUNT_ROLE_PREFIX="ManagedOpenShift"
FIPS="false"
DISABLE_WORKLOAD_MONITORING="false"
