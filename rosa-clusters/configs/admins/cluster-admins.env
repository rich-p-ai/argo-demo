#------------------------------------------------------------------------------
# Cluster Administrators Configuration
# Purpose: Define users who should have cluster-admin privileges
#------------------------------------------------------------------------------
# These users will be granted the cluster-admin ClusterRole, providing
# full administrative access to the cluster.
#
# Format: One username per line (as they appear in the identity provider)
# For LDAP users, use the sAMAccountName (e.g., Q22529)
#------------------------------------------------------------------------------

# Platform Engineering Team
CLUSTER_ADMINS=(
    "Q22529"      # Richard Sawyers - Platform Lead
    "Q11013"      # LDAP Service Account
)

# Additional cluster-admin users can be added here
# Format: "username"  # Name - Role/Team

#------------------------------------------------------------------------------
# Group-based access (optional)
# If using OpenShift groups, specify group names here
#------------------------------------------------------------------------------
CLUSTER_ADMIN_GROUPS=(
    "cluster-admins"
)

#------------------------------------------------------------------------------
# Dedicated-admins (limited admin access - cannot modify cluster operators)
# These users get dedicated-admin role instead of full cluster-admin
#------------------------------------------------------------------------------
DEDICATED_ADMINS=(
    # "username"  # Name - Role/Team
)
