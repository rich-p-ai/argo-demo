#------------------------------------------------------------------------------
# ROSA HCP Cluster Configuration: miaocplab
# Purpose: Test/Lab cluster - Minimal cost configuration
#------------------------------------------------------------------------------
# Estimated Monthly Cost: ~$433
#   - ROSA HCP fee: ~$123/month
#   - 2x m5.xlarge: ~$277/month
#   - NAT Gateway: ~$33/month
#------------------------------------------------------------------------------

# Cluster identification
CLUSTER_NAME="miaocplab"
ENVIRONMENT="lab"

# AWS Configuration
AWS_REGION="us-east-1"

# Cluster sizing (X-Small - Cost Optimized)
REPLICAS=2                      # Minimum for ROSA HCP
INSTANCE_TYPE="m5.xlarge"       # 4 vCPU, 16GB RAM - smallest recommended
MULTI_AZ="false"                # Single AZ for cost savings

# Autoscaling (enabled for cost savings - scales down during idle)
ENABLE_AUTOSCALING="true"
MIN_REPLICAS=2
MAX_REPLICAS=4

# Networking
# Leave empty to auto-create VPC, or specify existing subnet IDs
# SUBNET_IDS="subnet-xxx,subnet-yyy"
MACHINE_CIDR="10.0.0.0/16"
SERVICE_CIDR="172.30.0.0/16"
POD_CIDR="10.128.0.0/14"
HOST_PREFIX=23

# Access
PRIVATE_CLUSTER="false"         # Public for ease of access in lab

# OpenShift Version (leave empty for latest stable)
# OPENSHIFT_VERSION="4.14.10"

# Tags (comma-separated key=value pairs)
TAGS="environment=lab,cost-center=platform-engineering,owner=platform-team,purpose=testing"

#------------------------------------------------------------------------------
# Advanced Options (usually don't need to change)
#------------------------------------------------------------------------------

# OIDC Config ID (set by setup-prereqs.sh or manually)
# OIDC_CONFIG_ID=""

# Account role prefix
ACCOUNT_ROLE_PREFIX="ManagedOpenShift"

# Operator role prefix (defaults to cluster name)
# OPERATOR_ROLE_PREFIX=""

# Enable FIPS mode
FIPS="false"

# Disable workload monitoring
DISABLE_WORKLOAD_MONITORING="false"
