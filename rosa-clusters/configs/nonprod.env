#------------------------------------------------------------------------------
# ROSA HCP Cluster Configuration: nonprod
# Purpose: Non-Production environment cluster
#------------------------------------------------------------------------------
# Estimated Monthly Cost: ~$650/month
#   - ROSA HCP fee: ~$123/month
#   - 3x m5.xlarge: ~$415/month
#   - NAT Gateways: ~$100/month
#------------------------------------------------------------------------------

# Cluster identification
CLUSTER_NAME="nonprod2"
ENVIRONMENT="nonprod"

# AWS Configuration
AWS_REGION="us-east-1"
AWS_BILLING_ACCOUNT="181398284246"

# Cluster sizing (Small - Multi-AZ for availability)
REPLICAS=3                      # 3 workers across 3 AZs
INSTANCE_TYPE="m5.xlarge"       # 4 vCPU, 16GB RAM
MULTI_AZ="true"                 # Multi-AZ for high availability

# Autoscaling
ENABLE_AUTOSCALING="true"
MIN_REPLICAS=3
MAX_REPLICAS=6

#------------------------------------------------------------------------------
# Networking - VPC Configuration
#------------------------------------------------------------------------------
# Option 1: Use existing VPC (recommended)
#   - Create VPC first: ./scripts/create-vpc.sh nonprod-vpc us-east-2
#   - Or reference VPC config: see configs/vpcs/nonprod-vpc.env
#
# Option 2: Let ROSA create VPC (leave SUBNET_IDS empty)
#   - Only works if you have VPC quota available
#------------------------------------------------------------------------------

# VPC: nonprod-vpc in us-east-1 (N. Virginia) - Practical AI account
# Public + Private subnets across 3 AZs
SUBNET_IDS="subnet-0298cbe951e2e2d55,subnet-0bdd14f6d2aa4ff5a,subnet-0f453eb12afcc35a0,subnet-05f17351ee83514b3,subnet-083ddf07f0f6087a8,subnet-0d4b3b7b771b97d88"
MACHINE_CIDR="10.0.0.0/16"
SERVICE_CIDR="172.30.0.0/16"
POD_CIDR="10.128.0.0/14"
HOST_PREFIX=23

# Access
PRIVATE_CLUSTER="false"

# OpenShift Version (leave empty for latest stable)
OPENSHIFT_VERSION="4.20.4"

# Tags (optional - can be added via AWS console after creation)
# Format: "key value,key value" - leave empty for now
TAGS=""

# Account settings
ACCOUNT_ROLE_PREFIX="ManagedOpenShift"
FIPS="false"
DISABLE_WORKLOAD_MONITORING="false"
