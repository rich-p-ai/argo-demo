#------------------------------------------------------------------------------
# ROSA HCP Cluster Configuration: rosa-test
# Purpose: Test cluster in ROSA-POC VPC (same VPC as production rosa cluster)
# VPC: ROSA-POC (vpc-0a70417afafb28e82) - Private PrivateLink cluster
#------------------------------------------------------------------------------
# Estimated Monthly Cost: ~$400/month (single AZ, cost-optimized)
#   - ROSA HCP fee: ~$123/month
#   - 2x m5.xlarge: ~$277/month
#   - Network: Uses existing VPC infrastructure
#------------------------------------------------------------------------------

# Cluster identification
CLUSTER_NAME="rosa-test"
ENVIRONMENT="test"

# AWS Configuration
AWS_REGION="us-east-1"
AWS_BILLING_ACCOUNT="656113190503"

# Cluster sizing (X-Small - Single AZ for cost optimization)
REPLICAS=2                      # 2 workers in single AZ
INSTANCE_TYPE="m5.xlarge"       # 4 vCPU, 16GB RAM
MULTI_AZ="false"                # Single AZ for test environment

# Autoscaling
ENABLE_AUTOSCALING="true"
MIN_REPLICAS=2
MAX_REPLICAS=4

#------------------------------------------------------------------------------
# Networking - VPC Configuration
#------------------------------------------------------------------------------
# VPC: ROSA-POC (vpc-0a70417afafb28e82)
# Reference: configs/vpcs/rosa-poc-vpc.env
# Note: Same VPC as production "rosa" cluster
#------------------------------------------------------------------------------

# Single AZ configuration - using us-east-1a private subnet
SUBNET_IDS="subnet-0609b813c0c9ea063"
MACHINE_CIDR="10.222.152.0/22"

# Network CIDRs (must be unique per cluster - using defaults to avoid conflict)
SERVICE_CIDR="172.30.0.0/16"
POD_CIDR="10.128.0.0/14"
HOST_PREFIX=23

# Access - Private cluster (PrivateLink) required for private-subnet-only VPC
PRIVATE_CLUSTER="true"

# OpenShift Version (matching production rosa cluster)
OPENSHIFT_VERSION="4.20.8"

# Tags
TAGS="environment:test,cost-center:platform-engineering,owner:platform-team,purpose:testing"

# Account settings
ACCOUNT_ROLE_PREFIX="ManagedOpenShift"
FIPS="false"
DISABLE_WORKLOAD_MONITORING="false"
